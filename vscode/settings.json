{
    "extensions.ignoreRecommendations": true,
    "security.workspace.trust.untrustedFiles": "open",
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "window.zoomLevel": -1,
    "editor.tabSize": 2,
    "[lua]": {
        "editor.defaultFormatter": "sumneko.lua"
    },
    "editor.renderLineHighlight": "all",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#00000000",
        "editor.lineHighlightBorder": "#0000ff"
    },
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?_",
    "files.associations": {
        "*.vertex": "glsl",
        "*.fragment": "glsl",
        "*.glsl": "glsl"
    },
    "C_Cpp.dimInactiveRegions": false,
    "explorer.confirmDragAndDrop": false,
    "git.openRepositoryInParentFolders": "never",
    "debug.onTaskErrors": "abort",
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.external.windowsExec": "D:\\Programs\\w64devkit\\bin\\sh.exe -l",
    "terminal.integrated.profiles.windows": {
        "w64devkit": {
            "path": "D:\\Programs\\w64devkit\\bin\\sh.exe",
            "args": [
              "-l"
            ]
        }
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "cmake.showOptionsMovedNotification": false,
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
		],
    "editor.indentSize": "tabSize",
    "editor.detectIndentation": false,
    "python.createEnvironment.trigger": "off",
    "pylint.enabled": false,
    "terminal.integrated.fontSize": 18,
    "editor.cursorStyle": "block",
    "terminal.integrated.cursorBlinking": true, 
    "editor.find.seedSearchStringFromSelection": "never",
    "terminal.integrated.tabs.defaultIcon": "chevron-right",
    "workbench.activityBar.location": "top",
    "vanim.ranges": [
      { "start": 0,   "end": 3 },
      { "start": 10,  "end": 14 },
      { "start": 25,  "end": 30 }
    ],
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingComments": "never",
    "editor.autoClosingDelete": "never",
    "editor.minimap.enabled": false,
    "chat.commandCenter.enabled": false,
    "amp.url": "https://ampcode.com/",
    "amp.commands.allowlist": [
      "msbuild",
      "MSBuild.exe",
      "*/MSBuild.exe",
      "\"C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe\"",
      "*"
    ],
    "mcp": {
      "servers": {
        "sqlite": {
          "command": "uvx",
          "args": [
            "mcp-server-sqlite",
            "--db-path",
            "${input:db_path}"
          ]
        }
      },
      "inputs": [
        {
          "type": "promptString",
          "id": "db_path",
          "description": "SQLite Database Path",
          "default": "${workspaceFolder}/db.sqlite"
        }
      ]
    },
    "diffEditor.renderSideBySide": false,
    "diffEditor.experimental.useTrueInlineView": true,
    "editor.accessibilitySupport": "off"
  }